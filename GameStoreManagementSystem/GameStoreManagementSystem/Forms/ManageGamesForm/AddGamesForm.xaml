<Window x:Class="GameStoreManagementSystem.Forms.AddGamesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreManagementSystem.Forms.ManageGamesForm"
        mc:Ignorable="d"
        Title="Add Game"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3 -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ==================== TITLE ==================== -->
        <TextBlock Grid.Row="0"
                   Text="Add Game"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>


        <!-- ==================== ROW 1 ==================== -->
        <!-- Game Name -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock>
                Game Name <Italic>(required)</Italic>
            </TextBlock>
            <TextBox x:Name="InputGameName"
                        Height="30"
                        Padding="5"/>
        </StackPanel>


        <!-- ==================== ROW 2 ==================== -->
        <!-- Genre -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock>
                    Genre <Italic>(required)</Italic>
            </TextBlock>
            <TextBox x:Name="InputGenre"
                         Height="30"
                         Padding="5"/>
        </StackPanel>

        <!-- ==================== ROW 3 ==================== -->
        <StackPanel Grid.Row="3" Margin="10 10 10 0">
            <TextBlock>
                Developer <Italic>(required)</Italic>
            </TextBlock>
            <TextBox x:Name="InputDeveloper"
                     Height="30"
                     Padding="5"/>
        </StackPanel>


        <!-- ==================== ROW 4 ==================== -->
        <StackPanel Grid.Row="4" Margin="10 10 10 0">
            <TextBlock>
                Release Year
            </TextBlock>
            <TextBox x:Name="InputReleaseYear"
                     Height="30"
                     Padding="5"/>
        </StackPanel>


        <!-- ==================== BUTTONS ==================== -->
        <Grid Grid.Row="5" Margin="10 20 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="Cancel"
                    Width="100"
                    Height="35"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Click="Cancel_Click"/>

            <Button Content="Add Game"
                    Width="110"
                    Height="35"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Grid.Column="1"
                    Click="Add_Click"/>
        </Grid>

    </Grid>
</Window>
