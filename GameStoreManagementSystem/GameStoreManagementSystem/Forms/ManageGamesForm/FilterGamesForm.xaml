<Window x:Class="GameStoreManagementSystem.Forms.ManageGamesForm.FilterGamesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreManagementSystem.Forms.ManageGamesForm"
        mc:Ignorable="d"
        Title="Add Game"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Text="Filter Games"
               FontSize="32"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0 0 0 30"/>

        <!-- FILTER BY ID -->
        <Grid Grid.Row="1" Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="By ID"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 15 0"/>

            <TextBox x:Name="InputID"
                 Grid.Column="1"
                 Height="35"
                 Margin="0 0 15 0"
                 Padding="8"/>

            <Button Content="Filter >"
                Grid.Column="2"
                Height="35"
                Width="90"
                Margin="0"
                Click="FilterID_Click"/>
        </Grid>

        <!-- FILTER BY NAME -->
        <Grid Grid.Row="2" Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="By Name"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 15 0"/>

            <TextBox x:Name="InputName"
                 Grid.Column="1"
                 Height="35"
                 Margin="0 0 15 0"
                 Padding="8"/>

            <Button Content="Filter >"
                Grid.Column="2"
                Height="35"
                Width="90"
                Click="FilterName_Click"/>
        </Grid>

        <!-- FILTER BY GENRE -->
        <Grid Grid.Row="3" Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="By Genre"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 15 0"/>

            <TextBox x:Name="InputGenre"
                 Grid.Column="1"
                 Height="35"
                 Margin="0 0 15 0"
                 Padding="8"/>

            <Button Content="Filter >"
                Grid.Column="2"
                Height="35"
                Width="90"
                Click="FilterGenre_Click"/>
        </Grid>

        <!-- BUTTON BAR -->
        <Grid Grid.Row="4" Margin="0 30 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Cancel"
                Grid.Column="0"
                Width="120"
                Height="40"
                HorizontalAlignment="Left"
                Click="Cancel_Click"/>

            <Button Content="View All Games"
                Grid.Column="1"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                Click="ViewAll_Click"/>
        </Grid>
    </Grid>
</Window>
