<Window x:Class="GameStoreManagementSystem.Forms.ManageProductsForm.AddProductForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreManagementSystem.Forms.ManageProductsForm"
        mc:Ignorable="d"
        Title="Add Product" Height="530" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4 -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ==================== TITLE ==================== -->
        <TextBlock Grid.Row="0"
                  Text="Add Product"
                  FontSize="26"
                  FontWeight="Bold"
                  HorizontalAlignment="Center"
                  Margin="0 0 0 20"/>


        <!-- ==================== ROW 1 ==================== -->
        <!-- Inventory Name -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock>
               Inventory <Italic>(required)</Italic>
            </TextBlock>
            <ComboBox x:Name="InventorySelect"
                       Height="30"
                       Padding="5"/>
        </StackPanel>

        <!-- ==================== ROW 2 ==================== -->
        <!-- Genre -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock>
               Customer <Italic>(required)</Italic>
            </TextBlock>
            <ComboBox x:Name="CustomerSelect"
                        Height="30"
                        Padding="5"/>
        </StackPanel>

        <!-- ==================== ROW 3 ==================== -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10 10 10 0">
                <TextBlock>
                    Quantity <Italic>(required)</Italic>
                </TextBlock>
                <TextBox x:Name="InputQuantity"
                         Height="30"
                         Padding="5"
                         PreviewTextInput="InputQuantity_PreviewTextInput" />
            </StackPanel>

            <!-- Cost -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock>
                    Cost <Italic>(required)</Italic>
                </TextBlock>
                <DockPanel LastChildFill="True">
                    <TextBlock FontSize="15" VerticalAlignment="Center" Margin="0,0,5,0">$</TextBlock>
                    <TextBox x:Name="InputCost"
                             Height="30"
                             Padding="5"
                             PreviewTextInput="InputCost_PreviewTextInput"/>
                </DockPanel>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="4" Margin="10 10 10 0">
            <TextBlock>
               Date of Purchase
            </TextBlock>
            <DatePicker x:Name="DateOfPurchaseInput"
                    Height="30"
                    Padding="5"/>
        </StackPanel>

        <!-- ==================== ROW 4 ==================== -->
        <StackPanel Grid.Row="5" Margin="10 10 10 0">
            <TextBlock>
               Store <Italic>(required)</Italic>
            </TextBlock>
            <ComboBox x:Name="StoreSelect"
                    Height="30"
                    Padding="5"/>
        </StackPanel>


        <!-- ==================== BUTTONS ==================== -->
        <Grid Grid.Row="6" Margin="10 20 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="Cancel"
                   Width="100"
                   Height="35"
                   Margin="5"
                   HorizontalAlignment="Left"
                   Click="Cancel_Click"/>

            <Button Content="Add Product"
                   Width="110"
                   Height="35"
                   Margin="5"
                   HorizontalAlignment="Right"
                   Grid.Column="1"
                   Click="Add_Click"/>
        </Grid>

    </Grid>
</Window>
