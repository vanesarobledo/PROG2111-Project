<Window x:Class="GameStoreManagementSystem.Forms.ManageStoreForm.AddStore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreManagementSystem.Forms.ManageStoreForm"
        mc:Ignorable="d"
        Title="Add Store" Height="200" Width="500">
    <Grid>
        <TextBlock Text="Add Store" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Store Location" Margin="10,67,401,97"/>
        <TextBox x:Name="StoreNameInput" HorizontalAlignment="Left" Margin="100,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" MaxLength="50"/>
        <Button x:Name="AddStoreButton" Content="Add Store" HorizontalAlignment="Left" Margin="378,67,0,0" VerticalAlignment="Top" Click="AddStoreButton_Click" Width="92"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" Height="34" Width="116" Click="CancelButton_Click"/>
    </Grid>
</Window>
