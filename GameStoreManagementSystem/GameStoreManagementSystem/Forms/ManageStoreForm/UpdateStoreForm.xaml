<Window x:Class="GameStoreManagementSystem.Forms.ManageStoreForm.UpdateStoreForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreManagementSystem.Forms.ManageStoreForm"
        mc:Ignorable="d"
        Title="UpdateStoreForm" Height="200" Width="500"
        Loaded="Window_Loaded">
    <Grid>
        <TextBlock  Text="Update Store" FontSize="26" FontWeight="Bold" HorizontalAlignment="Left" Margin="175,20,0,130"/>
        <TextBlock Text="Store Name" Margin="20,65,400,100"/>
        <TextBox x:Name="StoreNameInput" HorizontalAlignment="Left" Margin="99,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" MaxLength="50"/>
        <Button x:Name="UpdateStoreButton" Content="Update Store" HorizontalAlignment="Left" Margin="378,67,0,0" VerticalAlignment="Top" Click="UpdateStoreButton_Click" Width="92"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="192,114,0,0" VerticalAlignment="Top" Height="34" Width="116" Click="CancelButton_Click"/>

    </Grid>
</Window>
