<Window x:Class="GameStoreManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreManagementSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">

        <TextBlock Text="Game Store Management System"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,30"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">

            <Button Content="Manage Games"
                    Height="40" Margin="0,10"
                    Click="OpenGames_Click"/>

            <Button Content="Manage Customers"
                    Height="40" Margin="0,10"
                    Click="OpenCustomers_Click"/>

            <Button Content="Manage Stores"
                    Height="40" Margin="0,10"
                    Click="OpenStores_Click"/>

            <Button Content="Manage Inventory"
                    Height="40" Margin="0,10"
                    Click="OpenInventory_Click"/>

            <Button Content="Manage Products"
                    Height="40" Margin="0,10"
                    Click="OpenProducts_Click"/>
        </StackPanel>
    </Grid>
</Window>
