<UserControl x:Class="GameStoreManagementSystem.Views.Customers.ManageCustomers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">

        <StackPanel>

            <!-- PAGE TITLE -->
            <TextBlock Text="Manage Customers"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0 0 0 30"
                   HorizontalAlignment="Center"/>

            <!-- BUTTONS -->
            <StackPanel Orientation="Vertical" Width="300"
                    HorizontalAlignment="Center">

                <Button Content="Add Customer"
                    Margin="10"
                    Height="45"
                    Click="AddCustomer_Click"/>

                <Button Content="Filter Customer"
                    Margin="10"
                    Height="45"
                    Click="FilterCustomer_Click"/>

                <Button Content="Update Customer"
                    Margin="10"
                    Height="45"
                    Click="UpdateCustomer_Click"/>

                <Button Content="Delete Customer"
                    Margin="10"
                    Height="45"
                    Click="DeleteCustomer_Click"/>

                <!-- BACK BUTTON -->
                <Button Content="← Back"
                 HorizontalAlignment="Right"
                 Width="80"
                 Margin="0 0 10 20"
                 Click="Back_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
