<UserControl x:Class="GameStoreManagementSystem.Views.Stores.ManageStores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">

        <StackPanel>

            <!-- PAGE TITLE -->
            <TextBlock Text="Manage Store"
         FontSize="32"
         FontWeight="Bold"
         Margin="0 0 0 30"
         HorizontalAlignment="Center"/>

            <!-- BUTTONS -->
            <StackPanel Orientation="Vertical" Width="300"
         HorizontalAlignment="Center">

                <Button Content="Add Store"
            Margin="10"
            Height="45"
            Click="AddStore_Click"/>

                <Button Content="Filter Store"
            Margin="10"
            Height="45"
            Click="FilterStore_Click"/>

                <Button Content="Update Store"
            Margin="10"
            Height="45"
            Click="UpdateStore_Click"/>

                <Button Content="Delete Store"
            Margin="10"
            Height="45"
            Click="DeleteStore_Click"/>

                <!-- BACK BUTTON -->
                <Button Content="← Back"
            HorizontalAlignment="Right"
            Width="80"
            Margin="0 0 10 20"
            Click="Back_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
